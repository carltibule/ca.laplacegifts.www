<div class="container">
	<div class="card">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        <% if @product.image.url.nil?%>
                            <%= image_tag('NoImageAvailablePicture.png', alt: 'Placeholder image', class:'img_fluid') %>
                        <% else %>
                            <%= image_tag(@product.image.url(:detail_size), class:'img-fluid')%>
                        <% end %>
                    </div>		
				</div>
                <div class="details col-md-6">
				    <h3><%= @product.title %></h3>
					<p><%= @product.description %></p>
					<h4>
						<% if @product.sale_discount.nil? %>
                            <%= number_to_currency(@product.price)%>
                        <% else %>
                            <h6><s><%= number_to_currency(@product.price) %></s> <%= number_to_currency(@product.price - @product.price * @product.sale_discount)%> (-<%= number_to_percentage(@product.sale_discount * 100, precision: 2)%>)</h6>
                        <% end %>
					</h4>
					<div class="action">
						<button class="btn btn-default" type="button">Add to cart</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>