<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <h1>Sign-up<h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-9">
            <%= form_for @customer do |f|%>
                <div class="form-group">
                    <%= f.label :first_name%>
                    <%= f.text_field :first_name, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :middle_name%>
                    <%= f.text_field :middle_name, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :last_name%>
                    <%= f.text_field :last_name, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label '1st Address'%>
                    <%= f.text_field :first_address_line, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label '2nd Address'%>
                    <%= f.text_field :second_address_line, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :city%>
                    <%= f.text_field :city, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :province%>
                    <%= f.text_field :province, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :postal_code%>
                    <%= f.text_field :postal_code, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :phone_number%>
                    <%= f.text_field :phone_number, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :cell_number%>
                    <%= f.text_field :cell_number, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :email_address%>
                    <%= f.email_field :email_address, class: 'form-control'%>
                </div>
                <div class="form-group">
                    <%= f.label :password%>
                    <%= f.text_field :password, class: 'form-control'%>
                </div>
                <%= f.submit%>
            <% end %>
        </div>
    </div>
</div>