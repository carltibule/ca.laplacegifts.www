<!DOCTYPE html>
<html>
  <head>
    <title>Laplace Gifts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <%= link_to "Laplace Gifts", root_path, class: "nav-link navbar-brand"%>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "Home", root_path, class: "nav-link"%>
            </li>

            <% if customer_signed_in? %>
                <li class="dropdown">
                  <a class="dropdown-toggle nav-link" data-toggle="dropdown" href="#">
                    <%= current_customer.email %>
                    <span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to 'Profile', edit_customer_registration_path %></li>
                    <li><%= link_to 'Log out', destroy_customer_session_path, method: :delete %></li>
                  </ul>
                </li>
            <% else %>
              <li><%= link_to 'Log In', new_customer_session_path, class: "nav-link" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Laplace Gifts 2018</p>
      </div>
      <!-- /.container -->
    </footer>
  </body>
</html>
